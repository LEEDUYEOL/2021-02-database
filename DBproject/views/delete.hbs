<!-- delete 화면 -->
<h1>{{ title }}</h1>
<table>
  <tr>
    <td>Airport_code</td>
    <td>Name</td>
    <td>City</td>
    <td>State</td>
  </tr>
  {{#each airport}}
    <form method="post">
      <tr>
        <td>{{Airport_code}}</td>
        <td>{{Name}}</td>
        <td>{{City}}</td>
        <td>{{State}}</td>
        <td style="border: none; margin-left: 10px;">
          <button 
            style="margin-left: 10px;"
            type="submit" 
            name="delBtn"
            value={{Airport_code}} 
            formaction="/delete"> <!-- project와 구분하기 위해 name 다르게 -->
          삭제
          </button>
        </td>
      </tr>    
    </form>
  {{/each}}
</table>

